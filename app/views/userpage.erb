
<div class="profile">
    <div class="content container" id="userInfo">
        <div class="row" id="profileInfo">
            <div class="col-md-4 col-xs-6" id="userInformation">
                <img class="img-responsive" src='<%= @user.avatar_url %>'>
            </div>
            
        </div>
    </div>

    <div class="content container" id="userpagePosts">
        <div class="row" id="userposts">
            <% if @user.posts_count %>
                <% @user.posts_count.each do |post| %>
                    <div class="col-md-4 col-sm-6 col-xs-12" id="indivPosts">
                        <img class="img-responsive" src="<%= post.photo_url %>">
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
