<div class="totalPosts">
     <% if current_user %>
            <h1><%= current_user.username %></h1>
    <% else %>
        <h1>Welcome to Finstagram</h1>
    <% end %>
</div>

<% if current_user %>
    <div class="new-post">
        <a href="/posts/new" class="button">New Post</a>
    </div>
<% end %>

<% @posts.each do |post| %>
   <%= erb(:'shared/post', { locals: { post: post, allow_new_comment: true }}) %>
<% end %>
